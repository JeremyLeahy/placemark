<form class="box" action="/coffeeshop/{{coffeeShop._id}}/addinfo" method="POST">
    <label>Enter Coffee Shop Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <label class="label">Coffee Shop Name</label>
                <input class="input" type="text" placeholder="Add coffee shop name" name="placeName">
            </div>

            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                <textarea class="textarea is-input has-fixed-size" type="text" maxlength="250" placeholder="Add Description" name="description">
                </textarea>
            </div>
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Details</button>
</form>